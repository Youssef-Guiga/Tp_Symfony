{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/adminstyle.css') }}">
{% endblock %}

{% block body %}
<header class="main-header">
    <div class="logo">
        <img src="{{ asset('images/logo.png') }}" alt="Company Logo">
    </div>
    <nav class="main-nav">
        <ul>
            <li><a href="{{ path('admin_manage_orders') }}">Manage Orders</a></li>
            <li><a href="{{ path('admin_dashboard') }}">Manage Books</a></li>
        </ul>
    </nav>
    <div class="admin-actions">
        <a href="user_dashboard">View User Dashboard</a>
        <a href="logout">Logout</a>
    </div>
</header>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="form-container">
                <h1>Add New Book</h1>
                {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_label(form.title, 'Title') }}
                        {{ form_widget(form.title, { 'attr': { 'class': 'form-control' } }) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.author, 'Author') }}
                        {{ form_widget(form.author, { 'attr': { 'class': 'form-control' } }) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.price, 'Price') }}
                        {{ form_widget(form.price, { 'attr': { 'class': 'form-control' } }) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.img, 'Image') }}
                        {{ form_widget(form.img, { 'attr': { 'class': 'form-control-file' } }) }}
                    </div>
                    <button type="submit" class="btn btn-primary">Save</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}


